<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_10"
        tools:context=".activities.addmusic.AddMusicActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:translationZ="5dp"
            android:layout_marginBottom="10dp">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_gravity="center |start"
                android:layout_marginLeft="5dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upload Song"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:translationZ="5dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="9"
                android:layout_marginTop="10dp"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Title Name"
                    android:gravity="center |left"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>

            <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionDone"
                    android:backgroundTint="@color/grey_70"
                    android:textColor="@color/grey_70"
                    android:layout_marginStart="10dp"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Choose Mp3 File"
                    android:gravity="center |left"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
            />
            <EditText
                    android:id="@+id/music_file"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionNext"
                    android:textColor="@color/grey_70"
                    android:layout_marginStart="10dp"
                    android:editable="false"
                    android:focusable="false"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Choose Thumbnail File"
                    android:gravity="center |left"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>

            <EditText
                    android:id="@+id/image_file"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionNext"
                    android:textColor="@color/grey_70"
                    android:layout_marginStart="10dp"
                    android:editable="false"
                    android:focusable="false"/>

            <ImageView
                    android:id="@+id/thumbnail_selected"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <TextView
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Upload Song"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/colorPrimary"
    />


</LinearLayout>