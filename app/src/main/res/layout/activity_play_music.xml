<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.playmusic.PlayMusicActivity"
        android:background="@drawable/background_play_music_gredient">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="14dp">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chevron_left_white_24dp"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/now_playing"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:textSize="20sp"/>

    </LinearLayout>


    <ImageView
            android:id="@+id/song_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_play_circle_outline_blue_24dp"
            android:elevation="5dp"
            android:translationZ="5dp"

    />

    <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Galliyan Long Gwaza"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>


    <TextView
            android:id="@+id/createdAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Galliyan Long Gwaza"
            android:gravity="start"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

    <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
    />



    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="bottom"
    >

        <ImageView
                android:id="@+id/previous_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_previous_black_24dp"/>

        <ImageView
                android:id="@+id/play_or_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_play_circle_filled_white_24dp"/>

        <ImageView
                android:id="@+id/next_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next_black_24dp"/>
    </LinearLayout>


</LinearLayout>